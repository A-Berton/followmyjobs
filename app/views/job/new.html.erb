<h1>Add new job</h1>

<%= form_tag :action => 'create' do %>

<p><label for = "job_position">Position</label>:
<%= text_field 'jobs', 'position' %></p>

<p><label for = "job_company">Company</label>:
<%= text_field 'jobs', 'company' %></p>

<p><label for = "job_kind_of">Kind of position</label>:
<%= text_field 'jobs', 'kind_of' %></p>

<p><label for = "job_salary">Salary</label>:
<%= text_field 'jobs', 'salary' %></p>

<p><label for = "job_status">Status</label>:
<%= text_field 'jobs', 'status' %></p>

<p><label for = "job_place">Place</label>:
<%= text_field 'jobs', 'place' %></p>

<%= submit_tag "Create" %>

<% end -%>
<%= link_to 'Back', {:action => 'list'} %>